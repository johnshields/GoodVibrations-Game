<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="menus" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar" >

    <!-- menu rules -->
    <rule id="menus">
        <one-of>
            <!-- main menu -->
            <item>
                <ruleref uri="#start"/>
            </item>
            <item>
                <ruleref uri="#exit"/>
            </item>
            <!-- select dog player -->
            <item>
                <ruleref uri="#next"/>
            </item>
            <item>
                <ruleref uri="#select"/>
            </item>
            <!-- in game menu -->
            <item>
                <ruleref uri="#pause"/>
            </item>
            <item>
                <ruleref uri="#resume"/>
            </item>
        </one-of>
    </rule>

    <!-- main menu -->
    <rule id="start">
        <one-of>
            <item>start</item>
            <item>play</item>
            <item>begin</item>
            <item>continue</item>
        </one-of>
    </rule>
    <rule id="exit">
        <one-of>
            <item>exit</item>
            <item>quit</item>
            <item>close</item>
        </one-of>
    </rule>

    <!-- select dog player -->
    <rule id="next">
        <one-of>
            <item>next</item>
            <item>no</item>
            <item>nah</item>
            <item>nope</item>
        </one-of>
    </rule>

    <rule id="select">
        <one-of>
            <item>select</item>
            <item>yes</item>
            <item>yeah</item>
        </one-of>
    </rule>

    <!-- in game menu -->
    <rule id="pause">
        <one-of>
            <item>pause</item>
            <item>hold</item>
        </one-of>
    </rule>

    <rule id="resume">
        <one-of>
            <item>resume</item>
            <item>back</item>
        </one-of>
    </rule>

</grammar>
