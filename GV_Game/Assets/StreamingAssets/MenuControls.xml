<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="menus" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar" >

    <!-- menu rules -->
    <rule id="menus">
        <one-of>
            <!-- main menu -->
            <item>
                <ruleref uri="#start"/>
            </item>
            <item>
                <ruleref uri="#exit"/>
            </item>
        </one-of>
    </rule>

    <!-- main menu -->
    <rule id="start">
        <one-of>
            <item>start</item>
            <item>play</item>
            <item>begin</item>
            <item>continue</item>
        </one-of>
    </rule>
    <rule id="exit">
        <one-of>
            <item>exit</item>
            <item>quit</item>
            <item>close</item>
        </one-of>
    </rule>
</grammar>
