<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="menus" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar" >

    <!-- menu rules -->
    <rule id="menus">
        <one-of>
            <!-- main menu -->
            <item>
                <ruleref uri="#start"/>
            </item>
            <item>
                <ruleref uri="#exit"/>
            </item>
            <!-- in game menu -->
            <item>
                <ruleref uri="#pause"/>
            </item>
            <item>
                <ruleref uri="#resume"/>
            </item>
            <item>
                <ruleref uri="#back_main_menu"/>
            </item>
        </one-of>
    </rule>

    <!-- main menu -->
    <rule id="start">
        <one-of>
            <item>start</item>
            <item>play</item>
            <item>begin</item>
            <item>continue</item>
        </one-of>
    </rule>
    <rule id="exit">
        <one-of>
            <item>exit</item>
            <item>quit</item>
            <item>close</item>
        </one-of>
    </rule>

    <!-- in game menu -->
    <rule id="pause">
        <one-of>
            <item>pause game</item>
            <item>hold game</item>
        </one-of>
    </rule>

    <rule id="resume">
        <one-of>
            <item>resume game</item>
            <item>back to game</item>
        </one-of>
    </rule>

    <rule id="back_main_menu">
        <one-of>
            <item>main menu</item>
            <item>go home</item>
        </one-of>
    </rule>
</grammar>
