<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="menu" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar">

    <!-- main menu -->
    <rule id="menu">
        <one-of>
            <item>
                <ruleref uri="#start"/>
            </item>
            <item>
                <ruleref uri="#exit"/>
            </item>
        </one-of>
    </rule>

    <!-- start game rule -->
    <rule id="start">
        <tag>out.action = "start the game";</tag>
        <one-of>
            <item>start</item>
            <item>play</item>
            <item>begin</item>
            
            <item>start the game</item>
            <item>play the game</item>
            <item>begin the game</item>
            <item>continue the game</item>
            
            <item>lets play</item>
            <item>lets start</item>
            <item>lets begin</item>
            <item>lets continue</item>
            
            <item>lets play the game</item>
            <item>lets start the game</item>
            <item>lets begin the game</item>
            <item>lets continue the game</item>

            <item>i want to play</item>
            <item>i want to start</item>
            <item>i want to begin</item>
            <item>i want to continue</item>
            <item>i would like to play</item>
            <item>i would like start</item>
            <item>i would like begin</item>
            <item>i would like continue</item>
            
            <item>i want to play the game</item>
            <item>i want to start the game</item>
            <item>i want to begin the game</item>
            <item>i want to continue the game</item>
            <item>i would like to play the game</item>
            <item>i would like start the game</item>
            <item>i would like begin the game</item>
            <item>i would like continue the game</item>
        </one-of>
    </rule>

    <!-- exit game rule -->
    <rule id="exit">
        <tag>out.action = "exit the game";</tag>
        <one-of>
            <item>exit</item>
            <item>quit</item>
            <item>close</item>
            <item>exit the game</item>
            <item>quit the game</item>
            <item>close the game</item>
        </one-of>
    </rule>
</grammar>
