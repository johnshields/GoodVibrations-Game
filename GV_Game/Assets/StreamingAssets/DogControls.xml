<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="movement" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar">

    <!-- movement rules -->
    <rule id="movement">
        <one-of>
            <!-- low profile movement -->
            <item>
                <ruleref uri="#idle"/>
            </item>
            <item>
                <ruleref uri="#walk"/>
            </item>
            <!-- high profile movement -->
            <item>
                <ruleref uri="#run"/>
            </item>
        </one-of>
    </rule>

    <!-- low profile movement -->
    <!-- idle rule -->
    <rule id="idle">
        <one-of>
            <item>idle dog</item>
            <item>yield dog</item>
            <item>stop dog</item>
            <item>halt dog</item>
        </one-of>
    </rule>

    <!-- walk rule -->
    <rule id="walk">
        <one-of>
            <item>walk dog</item>
            <item>go dog</item>
            <item>stroll dog</item>
            <item>wander dog</item>
        </one-of>
    </rule>

    <!-- high profile movement -->
    <!-- run rule -->
    <rule id="run">
        <one-of>
            <item>run dog</item>
            <item>jog dog</item>
            <item>dash dog</item>
        </one-of>
    </rule>
    
</grammar>
