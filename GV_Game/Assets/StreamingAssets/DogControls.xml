<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
         root="movement" tag-format="semantics/1.0"
         xmlns="http://www.w3.org/2001/06/grammar">

    <!-- movement rules -->
    <rule id="movement">
        <one-of>
            <!-- low profile movement -->
            <item>
                <ruleref uri="#idle"/>
            </item>
            <item>
                <ruleref uri="#walk"/>
            </item>
            <!-- high profile movement -->
            <item>
                <ruleref uri="#run"/>
            </item>
        </one-of>
    </rule>

    <!-- low profile movement -->
    <rule id="idle">
        <one-of>
            <item>idle</item>
            <item>yield</item>
            <item>stop</item>
            <item>halt</item>
        </one-of>
    </rule>

    <rule id="walk">
        <one-of>
            <item>walk</item>
            <item>go</item>
            <item>stroll</item>
            <item>wander</item>
        </one-of>
    </rule>

    <!-- high profile movement -->
    <rule id="run">
        <one-of>
            <item>run</item>
            <item>jog</item>
            <item>dash</item>
        </one-of>
    </rule>
</grammar>
